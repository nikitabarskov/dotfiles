general {
    output_format = "i3bar"
    colors = true
    interval = 5
    color_good = "#00FF00"
    color_bad = "#FF0000"
    color_degraded = "#FFFF00"
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "memory"
order += "disk /"
order += "disk /home"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"

cpu_usage {
    format = "CPU: %usage"
    max_threshold = 75
    degraded_threshold = 50
}

