// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_edit_predictions": false,
  "buffer_line_height": "comfortable",
  "ui_font_weight": 400.0,
  "relative_line_numbers": "enabled",
  "drag_and_drop_selection": {
    "delay": 300
  },
  "hover_popover_delay": 300,
  "auto_signature_help": true,
  "title_bar": {
    "show_menus": false,
    "show_onboarding_banner": true,
    "show_branch_icon": true
  },
  "search": {
    "button": true
  },
  "status_bar": {
    "cursor_position_button": true
  },
  "git": {
    "inline_blame": {
      "show_commit_summary": true
    }
  },
  "audio": {
    "experimental.denoise": true,
    "experimental.rodio_audio": true
  },
  "calls": {
    "mute_on_join": true
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "project_panel": {
    "open_file_on_paste": false,
    "hide_root": true,
    "show_diagnostics": "errors",
    "auto_fold_dirs": false,
    "indent_size": 10.0,
    "file_icons": true,
    "entry_spacing": "standard",
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "terminal": {
    "dock": "bottom"
  },
  "agent": {
    "default_profile": "ask",
    "enable_feedback": false,
    "dock": "left",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    }
  },
  "wrap_guides": [80, 120],
  "soft_wrap": "preferred_line_length",
  "autosave": "on_focus_change",
  "format_on_save": "off",
  "ui_font_size": 14.0,
  "ui_font_family": "IosevkaTerm Nerd Font Propo",
  "buffer_font_size": 14.0,
  "buffer_font_family": "IosevkaTerm Nerd Font Propo",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte (sky) - No Italics",
    "dark": "Catppuccin Mocha (sky) - No Italics"
  }
}
